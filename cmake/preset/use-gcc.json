{
    "version": 6,
    "configurePresets": [
        {
            "name": "use-gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -pedantic",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        }
    ]
}